<Defs>
	<!-- heart -->
	<ThingDef ParentName="BuildingBase">
		<defName>Ship_Heart_Hostile</defName>
		<label>ship heart (hostile)</label>
		<thingClass>Building_ShipBridge</thingClass>
		<graphicData>
			<texPath>Things/Building/Ship/ShipHeart7</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(5,5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<researchPrerequisites>
			<li>StructuralScaffold</li>
		</researchPrerequisites>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>1500</MaxHitPoints>
			<Flammability>0</Flammability>
			<MutationInducers>0</MutationInducers>
		</statBases>
		<tickerType>Normal</tickerType>
		<description>The beating heart of a ship</description>
		<size>(5,5)</size>
		<inspectorTabs>
			<li>ITab_Mutations</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_ShipPart"/>
			<li Class="CompProperties_ShipHeart">
				<species>bioship</species>
				<shipspecies>bioship</shipspecies>
			</li>
			<li Class="CompProperties_ArmorGrower"/>
			<li Class="CompProperties_Aggression">
				<baseAggression>0</baseAggression>
			</li>
			<li Class="CompProperties_RegenWorker">
				<regenCost>1.75</regenCost>
				<regenInterval>30</regenInterval>
			</li>
			<li Class="CompProperties_MutationWorker"/>
			<li Class="CompProperties_ShipScaffoldConverterInstant">
				<conversionInterval>0</conversionInterval>
				<conversionCost>0</conversionCost>
			</li>
			<li Class="CompProperties_ShipNutritionStore">
				<nutrientCapacity>50</nutrientCapacity>
				<initialNutrition>50</initialNutrition>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>0</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_ShipHeat">
				<compClass>CompShipHeat</compClass>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>MutationInducer</li>
				</linkableFacilities>
			</li>
		</comps>
		<rotatable>false</rotatable>
		<building>
			<shipPart>true</shipPart>
		</building>
		<placeWorkers>
		</placeWorkers>
		<costList>
			<HeartSeed>1</HeartSeed>
			<ProtienPutty>100</ProtienPutty>
		</costList>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<designationHotKey>Misc3</designationHotKey>
		<resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<killedLeavings>
			<HeartSeed>1</HeartSeed>
			<OrganSeed>1</OrganSeed>
		</killedLeavings>

	</ThingDef>

