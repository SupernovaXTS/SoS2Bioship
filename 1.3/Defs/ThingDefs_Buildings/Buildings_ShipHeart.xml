<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- heart -->
	<DesignatorDropdownGroupDef>
		<defName>Ship_Heart</defName>
	</DesignatorDropdownGroupDef>
	<ThingDef ParentName="BuildingBase">
		<defName>Ship_Heart</defName>
		<label>ship heart</label>
		<designatorDropdown>Ship_Heart</designatorDropdown>
		<thingClass>Building_ShipHeart</thingClass>
		<graphicData>
			<texPath>Things/Building/Ship/ShipHeart</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<researchPrerequisites>
		</researchPrerequisites>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0</Flammability>
			<MutationInducers>0</MutationInducers>
		</statBases>
		<tickerType>Normal</tickerType>
		<description>The beating heart of a ship</description>
		<size>(3,3)</size>
		<designationCategory>Ship</designationCategory>
		<comps>
			<li Class="CompProperties_ShipPart"/>
			<li Class="CompProperties_RoofMe"/>
			<li Class="CompProperties_ShipfleshConversion"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>0</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_ShipHeat">
				<compClass>CompShipHeat</compClass>
			</li>
			<li Class="CompProperties_ShipNutritionStore">
				<nutrientCapacity>10000</nutrientCapacity>
				<initialNutrition>10000</initialNutrition>
			</li>
			<li Class="CompProperties_Aggression"/>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>MutationInducer</li>
				</linkableFacilities>
			</li>
		</comps>
		<rotatable>false</rotatable>
		<building>
			<shipPart>true</shipPart>
		</building>
		<placeWorkers>
		</placeWorkers>
		<costList>
			<HeartSeed>1</HeartSeed>
			<ProtienPutty>100</ProtienPutty>
		</costList>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<designationHotKey>Misc3</designationHotKey>
		<resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
		<defName>ShipfleshAnalysisStation</defName>
		<label>flesh codex</label>
		<description>An analysis station where the secrets of the abomination seed can be unraveled.</description>
		<graphicData>
			<texPath>Things/Building/Ship/FleshCodex</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>2.46875</drawSize>
		</graphicData>
		<uiIconScale>0.85</uiIconScale>
		<size>(2,2)</size>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.5</fillPercent>
		<designationHotKey>Misc4</designationHotKey>
		<minifiedDef>MinifiedThing</minifiedDef>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>1200</MaxHitPoints>
			<WorkToBuild>10000</WorkToBuild>
			<Mass>60</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Uranium>40</Uranium>
			<Plasteel>250</Plasteel>
			<Gold>100</Gold>
			<ComponentSpacer>8</ComponentSpacer>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>200</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<ResearchSpeedFactor>0.2</ResearchSpeedFactor>
				</statOffsets>
				<maxSimultaneous>1</maxSimultaneous>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<constructionSkillPrerequisite>15</constructionSkillPrerequisite>
		<designationCategory>Ship</designationCategory>
	</ThingDef>

	<ThingDef ParentName="BuildingBase" Name="NerveStaple">
		<defName>NerveStaple</defName>
		<label>nerve staple</label>
		<description>A series of implants that deaden the senses of shipflesh, preventing unwanted growth and aggression.</description>
		<thingClass>Building_NerveStaple</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/Ship/Atlas_NerveStaple</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom4</li>
			</linkFlags>
			<damageData>
				<rect>(0,0.35,1,0.3)</rect>
			</damageData>
		</graphicData>
		<drawerType>MapMeshOnly</drawerType>
		<uiIconPath>Things/Building/Ship/NerveStaple_MenuIcon</uiIconPath>
		<uiIconScale>0.7</uiIconScale>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<blueprintGraphicData>
				<texPath>Things/Building/Ship/Blueprint_Atlas_CoolantConduit</texPath>
			</blueprintGraphicData>
		</building>
		<altitudeLayer>Conduits</altitudeLayer>
		<passability>Standable</passability>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>35</WorkToBuild>
			<Flammability>0.7</Flammability>
			<Beauty>-2</Beauty>
		</statBases>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList>
			<Steel>1</Steel>
			<Plasteel>1</Plasteel>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Neutroamine>2</Neutroamine>
		</costList>
		<comps>
		</comps>
		<placeWorkers>
		</placeWorkers>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Ship</designationCategory>
		<constructEffect>ConstructMetal</constructEffect>
		<clearBuildingArea>false</clearBuildingArea>
		<researchPrerequisites>
		</researchPrerequisites>
	</ThingDef>

	<DesignatorDropdownGroupDef>
		<defName>Mutation_Controls</defName>
	</DesignatorDropdownGroupDef>
	<ThingDef>
		<defName>MutationInducer</defName>
		<label>mutation inducer</label>
		<designatorDropdown>Mutation_Controls</designatorDropdown>
		<thingClass>Building</thingClass>
		<passability>PassThroughOnly</passability>
		<graphicData>
			<texPath>Things/Building/Ship/MawScaffold</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<researchPrerequisites>
			<li>MutationInduction</li>
		</researchPrerequisites>
		<altitudeLayer>Building</altitudeLayer>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>0</WorkToBuild>
			<MaxHitPoints>10</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<description>Mutation inducer.</description>
		<size>(1,1)</size>
		<designationCategory>Ship</designationCategory>
		<comps>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<MutationInducers>1</MutationInducers>
				</statOffsets>
				<maxSimultaneous>4</maxSimultaneous>
			</li>
		</comps>
		<rotatable>false</rotatable>
		<building>
			<shipPart>true</shipPart>
		</building>
		<costList>
			<ProtienPutty>2</ProtienPutty>
			<Neutroamine>4</Neutroamine>
		</costList>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<designationHotKey>Misc5</designationHotKey>
	</ThingDef>


</Defs>