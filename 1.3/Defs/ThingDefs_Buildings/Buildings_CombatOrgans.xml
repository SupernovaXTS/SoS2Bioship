	<!-- Spike Launchers-->
	<ThingDef ParentName="BaseShipArtilleryWeapon" Name="BaseBioTorpedo" Abstract="True">
		<description>Spine launcher.  Hurls volleys of bio-plasma propelled bone spikes.</description>
		<graphicData>
			<texPath>Things/Building/Ship/HullPlateTransparent</texPath>
		</graphicData>
		<weaponTags>
			<li>Artillery_BaseDestroyer</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_LaunchProjectileShip</verbClass>
				<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
				<warmupTime>4.0</warmupTime>
				<requireLineOfSight>false</requireLineOfSight>
				<range>500</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>Mortar_LaunchA</soundCast>
				<muzzleFlashScale>16</muzzleFlashScale>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<building>
			<fixedStorageSettings>
				<filter>
					<categories>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter>
					<categories>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
	</ThingDef>

